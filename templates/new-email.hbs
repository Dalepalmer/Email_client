<h2>Craft your message here</h2>
<form>
  <div class="form-group">
    <label for="recipient">Recipient</label>
    {{input value=recipient id="recipient" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="subject">Subject</label>
    {{input value=subject id="subject" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    {{textarea value=body id="body" class="form-control" rows="8"}}
  </div>
  <button class="btn btn-primary" {{action 'send'}}>Send</button>
</form>
